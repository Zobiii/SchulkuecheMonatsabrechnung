<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Schulkueche.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="700"
        x:Class="Schulkueche.App.Views.LoginWindow"
        x:DataType="vm:LoginViewModel"
        Title="Gemeinde-Küche - Anmeldung"
        Width="600" Height="1000"
        WindowStartupLocation="CenterScreen"
        CanResize="True">

    <Design.DataContext>
        <vm:LoginViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>

                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppSurfaceGray">#F0F0F0</SolidColorBrush>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="AppSurfaceGray">#121111</SolidColorBrush>
                </ResourceDictionary>

        
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Margin="50">
        
        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30,0,50">
            <Border Background="{DynamicResource AppSurfaceGray}"  
                    CornerRadius="20" Padding="25"
                    BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1"
                    BoxShadow="0 10 15 0 #22000000, 0 6 12 0 #4440A6FF">
                <TextBlock Text="🍳" FontSize="52" HorizontalAlignment="Center"/>
            </Border>
            
            <TextBlock Text="Gemeinde Küche" 
                      FontSize="32" FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,20,0,6"
                      Foreground="{DynamicResource ThemeForegroundBrush}"/>
            
            <TextBlock Text="Munderfing" 
                      FontSize="18" 
                      HorizontalAlignment="Center"
                      Foreground="{DynamicResource ThemeForegroundLowBrush}"/>
        </StackPanel>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="{DynamicResource AppSurfaceGray}" CornerRadius="12" Padding="40"
               BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1"
               BoxShadow="0 10 15 0 #22000000, 0 6 12 0 #4440A6FF">
            <Panel>
            
            <!-- Login Form -->
            <StackPanel IsVisible="{Binding IsLoginMode}">
                <TextBlock Text="Anmeldung" FontSize="26" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,35"
                          Foreground="{DynamicResource ThemeForegroundBrush}"/>
                
                <StackPanel Spacing="20">
                    <StackPanel>
                        <TextBlock Text="Benutzername" FontWeight="Medium" Margin="0,0,0,8" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox x:Name="UsernameTextBox" 
                                Text="{Binding Username}"
                                Watermark="Benutzername eingeben"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Passwort" FontWeight="Medium" Margin="0,0,0,8" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox x:Name="PasswordTextBox"
                                Text="{Binding Password}"
                                Watermark="Passwort eingeben"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Anmelden" 
                           Command="{Binding LoginCommand}"
                           Classes="accent"
                           Padding="20,16" FontSize="14" FontWeight="Medium"
                           CornerRadius="6" Height="52"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Margin="0,8,0,0"/>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="16" Margin="0,16,0,0">
                        <Button Grid.Column="0" Content="Neuer Benutzer"
                               Command="{Binding ShowRegisterCommand}"
                               Padding="10" FontSize="13"
                               CornerRadius="6" Height="40"
                               HorizontalContentAlignment="Center"/>
                               
                        <Button Grid.Column="1" Content="Passwort vergessen"
                               Command="{Binding ShowPasswordResetCommand}"
                               Margin="55,0,0,0"
                               Padding="10" FontSize="13"
                               CornerRadius="6" Height="40"
                               HorizontalContentAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
            
            <!-- Registration Form -->
            <StackPanel IsVisible="{Binding IsRegisterMode}">
                <TextBlock Text="Neuen Benutzer erstellen" FontSize="24" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,35"
                          Foreground="{DynamicResource ThemeForegroundBrush}"/>
                
                <StackPanel Spacing="16">
                    <StackPanel>
                        <TextBlock Text="Benutzername" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding NewUsername}"
                                Watermark="Gewünschter Benutzername"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="E-Mail" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding NewEmail}"
                                Watermark="E-Mail-Adresse"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Passwort" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding NewPassword}"
                                Watermark="Starkes Passwort wählen"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Passwort bestätigen" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding ConfirmPassword}"
                                Watermark="Passwort wiederholen"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Registrieren" 
                           Command="{Binding RegisterCommand}"
                           Classes="accent"
                           Padding="20,16" FontSize="14" FontWeight="Medium"
                           CornerRadius="6" Height="52"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Margin="0,12,0,0"/>
                    
                    <Button Content="← Zurück zur Anmeldung"
                           Command="{Binding ShowLoginCommand}"
                           Padding="16,12" FontSize="13"
                           CornerRadius="6" Height="42"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Email Verification Form -->
            <StackPanel IsVisible="{Binding IsVerificationMode}">
                <TextBlock Text="E-Mail Verifizierung" FontSize="24" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,25"
                          Foreground="{DynamicResource ThemeForegroundBrush}"/>
                
                <TextBlock Text="Ein Verifizierungscode wurde an Ihre E-Mail gesendet."
                          TextWrapping="Wrap" HorizontalAlignment="Center" 
                          Margin="0,0,0,35" FontSize="14"
                          Foreground="{DynamicResource ThemeForegroundLowBrush}"/>
                
                <StackPanel Spacing="20">
                    <StackPanel>
                        <TextBlock Text="Benutzername" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding VerificationUsername}"
                                Watermark="Ihr Benutzername"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Verifizierungscode" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding VerificationCode}"
                                Watermark="6-stelliger Code"
                                Padding="12" FontSize="16" FontFamily="Consolas"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Verifizieren" 
                           Command="{Binding VerifyCommand}"
                           Classes="accent"
                           Padding="20,16" FontSize="14" FontWeight="Medium"
                           CornerRadius="6" Height="52"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Margin="0,8,0,0"/>
                           
                    <Button Content="← Zurück zur Anmeldung"
                           Command="{Binding ShowLoginCommand}"
                           Padding="16,12" FontSize="13"
                           CornerRadius="6" Height="40"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Password Reset Form -->
            <StackPanel IsVisible="{Binding IsPasswordResetMode}">
                <TextBlock Text="Passwort zurücksetzen" FontSize="24" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,35"
                          Foreground="{DynamicResource ThemeForegroundBrush}"/>
                
                <StackPanel Spacing="16" IsVisible="{Binding !IsPasswordResetCodeSent}">
                    <StackPanel>
                        <TextBlock Text="Benutzername oder E-Mail" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding ResetUsernameOrEmail}"
                                Watermark="Benutzername oder E-Mail-Adresse"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Reset-Code senden" 
                           Command="{Binding RequestPasswordResetCommand}"
                           Classes="accent"
                           Padding="20,16" FontSize="14" FontWeight="Medium"
                           CornerRadius="6" Height="52"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Margin="0,8,0,0"/>
                </StackPanel>
                
                <StackPanel Spacing="16" IsVisible="{Binding IsPasswordResetCodeSent}">
                    <TextBlock Text="Ein Reset-Code wurde an Ihre E-Mail gesendet."
                              TextWrapping="Wrap" HorizontalAlignment="Center" 
                              Margin="0,0,0,20" FontSize="14"
                              Foreground="{DynamicResource ThemeForegroundLowBrush}"/>
                    
                    <StackPanel>
                        <TextBlock Text="Reset-Code" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding ResetCode}"
                                Watermark="6-stelliger Code"
                                Padding="12" FontSize="16" FontFamily="Consolas"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Neues Passwort" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding NewResetPassword}"
                                Watermark="Neues Passwort eingeben"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Passwort bestätigen" FontWeight="Medium" Margin="0,0,0,6" 
                                  Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        <TextBox Text="{Binding ConfirmResetPassword}"
                                Watermark="Passwort wiederholen"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                Height="40" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Passwort zurücksetzen" 
                           Command="{Binding ResetPasswordCommand}"
                           Classes="accent"
                           Padding="20,16" FontSize="14" FontWeight="Medium"
                           CornerRadius="6" Height="52"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Margin="0,8,0,0"/>
                </StackPanel>
                
                <Button Content="← Zurück zur Anmeldung"
                       Command="{Binding ShowLoginCommand}"
                       Padding="16,12" FontSize="13"
                       CornerRadius="6" Height="40"
                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                       Margin="0,16,0,0"/>
            </StackPanel>
            
            </Panel>
        </Border>

        <!-- Status Message -->
        <Border Grid.Row="2" Background="{DynamicResource SystemAccentColorLight3}" CornerRadius="8" Padding="16"
               IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
               BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1" 
               Margin="0,25,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="{DynamicResource SystemAccentColorDark2}" FontWeight="Medium"
                      TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="14"/>
        </Border>
    </Grid>
</Window>