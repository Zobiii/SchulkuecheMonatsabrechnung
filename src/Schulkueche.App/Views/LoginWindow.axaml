<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Schulkueche.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="700"
        x:Class="Schulkueche.App.Views.LoginWindow"
        x:DataType="vm:LoginViewModel"
        Title="Gemeinde-Küche - Anmeldung"
        Width="500" Height="800"
        WindowStartupLocation="CenterScreen"
        CanResize="True">

    <Design.DataContext>
        <vm:LoginViewModel/>
    </Design.DataContext>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F0F9FF" Offset="0"/>
            <GradientStop Color="#E0F2FE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid RowDefinitions="Auto,*,Auto" Margin="40">
        
        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,40">
            <Border Background="White" CornerRadius="20" Padding="20"
                   BorderBrush="#E5E7EB" BorderThickness="1"
                   BoxShadow="0 4 6 0 #19000000">
                <TextBlock Text="🍳" FontSize="48" HorizontalAlignment="Center"/>
            </Border>
            
            <TextBlock Text="Gemeinde-Küche" 
                      FontSize="28" FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,16,0,4"
                      Foreground="#1F2937"/>
            
            <TextBlock Text="Munderfing" 
                      FontSize="16" 
                      HorizontalAlignment="Center"
                      Foreground="#6B7280"/>
        </StackPanel>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="30"
               BorderBrush="#E5E7EB" BorderThickness="1"
               BoxShadow="0 10 15 0 #19000000">
            <Panel>
            
            <!-- Login Form -->
            <StackPanel IsVisible="{Binding IsLoginMode}">
                <TextBlock Text="Anmeldung" FontSize="24" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,30"
                          Foreground="#1F2937"/>
                
                <StackPanel Spacing="20">
                    <StackPanel>
                        <TextBlock Text="Benutzername" FontWeight="Medium" Margin="0,0,0,8" Foreground="#374151"/>
                        <TextBox x:Name="UsernameTextBox" 
                                Text="{Binding Username}"
                                Watermark="Benutzername eingeben"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Passwort" FontWeight="Medium" Margin="0,0,0,8" Foreground="#374151"/>
                        <TextBox x:Name="PasswordTextBox"
                                Text="{Binding Password}"
                                Watermark="Passwort eingeben"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Anmelden" 
                           Command="{Binding LoginCommand}"
                           Background="#2563EB" Foreground="White"
                           Padding="16" FontSize="16" FontWeight="Medium"
                           CornerRadius="6" BorderThickness="0"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center"/>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,20,0,0">
                        <Button Grid.Column="0" Content="Neuer Benutzer"
                               Command="{Binding ShowRegisterCommand}"
                               Background="White" Foreground="#2563EB"
                               BorderBrush="#2563EB" BorderThickness="1"
                               Padding="12" FontSize="14"
                               CornerRadius="6" HorizontalContentAlignment="Center"/>
                               
                        <Button Grid.Column="1" Content="Passwort vergessen"
                               Command="{Binding ShowPasswordResetCommand}"
                               Background="White" Foreground="#7C3AED"
                               BorderBrush="#7C3AED" BorderThickness="1"
                               Padding="12" FontSize="14"
                               CornerRadius="6" HorizontalContentAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
            
            <!-- Registration Form -->
            <StackPanel IsVisible="{Binding IsRegisterMode}">
                <TextBlock Text="Neuen Benutzer erstellen" FontSize="20" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,30"
                          Foreground="#1F2937"/>
                
                <StackPanel Spacing="16">
                    <StackPanel>
                        <TextBlock Text="Benutzername" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding NewUsername}"
                                Watermark="Gewünschter Benutzername"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="E-Mail" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding NewEmail}"
                                Watermark="E-Mail-Adresse"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Passwort" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding NewPassword}"
                                Watermark="Starkes Passwort wählen"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Passwort bestätigen" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding ConfirmPassword}"
                                Watermark="Passwort wiederholen"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Registrieren" 
                           Command="{Binding RegisterCommand}"
                           Background="#10B981" Foreground="White"
                           Padding="16" FontSize="16" FontWeight="Medium"
                           CornerRadius="6" BorderThickness="0"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center"
                           Margin="0,8,0,0"/>
                    
                    <Button Content="← Zurück zur Anmeldung"
                           Command="{Binding ShowLoginCommand}"
                           Background="White" Foreground="#6B7280"
                           BorderBrush="#D1D5DB" BorderThickness="1"
                           Padding="12" FontSize="14"
                           CornerRadius="6" HorizontalContentAlignment="Center"
                           Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Email Verification Form -->
            <StackPanel IsVisible="{Binding IsVerificationMode}">
                <TextBlock Text="E-Mail Verifizierung" FontSize="20" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,20"
                          Foreground="#1F2937"/>
                
                <TextBlock Text="Ein Verifizierungscode wurde an Ihre E-Mail gesendet."
                          TextWrapping="Wrap" HorizontalAlignment="Center" 
                          Margin="0,0,0,30" Foreground="#6B7280"/>
                
                <StackPanel Spacing="20">
                    <StackPanel>
                        <TextBlock Text="Benutzername" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding VerificationUsername}"
                                Watermark="Ihr Benutzername"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Verifizierungscode" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding VerificationCode}"
                                Watermark="6-stelliger Code"
                                Padding="12" FontSize="16" FontFamily="Consolas"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Verifizieren" 
                           Command="{Binding VerifyCommand}"
                           Background="#10B981" Foreground="White"
                           Padding="16" FontSize="16" FontWeight="Medium"
                           CornerRadius="6" BorderThickness="0"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center"/>
                           
                    <Button Content="← Zurück zur Anmeldung"
                           Command="{Binding ShowLoginCommand}"
                           Background="White" Foreground="#6B7280"
                           BorderBrush="#D1D5DB" BorderThickness="1"
                           Padding="12" FontSize="14"
                           CornerRadius="6" HorizontalContentAlignment="Center"
                           Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Password Reset Form -->
            <StackPanel IsVisible="{Binding IsPasswordResetMode}">
                <TextBlock Text="Passwort zurücksetzen" FontSize="20" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,30"
                          Foreground="#1F2937"/>
                
                <StackPanel Spacing="16" IsVisible="{Binding !IsPasswordResetCodeSent}">
                    <StackPanel>
                        <TextBlock Text="Benutzername oder E-Mail" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding ResetUsernameOrEmail}"
                                Watermark="Benutzername oder E-Mail-Adresse"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Reset-Code senden" 
                           Command="{Binding RequestPasswordResetCommand}"
                           Background="#7C3AED" Foreground="White"
                           Padding="16" FontSize="16" FontWeight="Medium"
                           CornerRadius="6" BorderThickness="0"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Spacing="16" IsVisible="{Binding IsPasswordResetCodeSent}">
                    <TextBlock Text="Ein Reset-Code wurde an Ihre E-Mail gesendet."
                              TextWrapping="Wrap" HorizontalAlignment="Center" 
                              Margin="0,0,0,20" Foreground="#6B7280"/>
                    
                    <StackPanel>
                        <TextBlock Text="Reset-Code" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding ResetCode}"
                                Watermark="6-stelliger Code"
                                Padding="12" FontSize="16" FontFamily="Consolas"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Neues Passwort" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding NewResetPassword}"
                                Watermark="Neues Passwort eingeben"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Passwort bestätigen" FontWeight="Medium" Margin="0,0,0,6" Foreground="#374151"/>
                        <TextBox Text="{Binding ConfirmResetPassword}"
                                Watermark="Passwort wiederholen"
                                PasswordChar="*"
                                Padding="12" FontSize="14"
                                BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6"/>
                    </StackPanel>
                    
                    <Button Content="Passwort zurücksetzen" 
                           Command="{Binding ResetPasswordCommand}"
                           Background="#7C3AED" Foreground="White"
                           Padding="16" FontSize="16" FontWeight="Medium"
                           CornerRadius="6" BorderThickness="0"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center"/>
                </StackPanel>
                
                <Button Content="← Zurück zur Anmeldung"
                       Command="{Binding ShowLoginCommand}"
                       Background="White" Foreground="#6B7280"
                       BorderBrush="#D1D5DB" BorderThickness="1"
                       Padding="12" FontSize="14"
                       CornerRadius="6" HorizontalContentAlignment="Center"
                       Margin="0,20,0,0"/>
            </StackPanel>
            
            </Panel>
        </Border>

        <!-- Status Message -->
        <Border Grid.Row="2" Background="#FEF3C7" CornerRadius="8" Padding="12"
               IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
               BorderBrush="#F59E0B" BorderThickness="1" Margin="0,20,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="#92400E" FontWeight="Medium"
                      TextWrapping="Wrap" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>